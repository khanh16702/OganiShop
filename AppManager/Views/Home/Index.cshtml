@section Scripts {
    <script>

        $.ajax({
            url: "/Products/GetAllCategory",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                $('#department').html('');
                data.forEach(function (item, index) {
                    //let row = `<li><a href="/${item.slug}">${item.name}</a></li>`;
                    let row = `<li><a href="/products/index?categoryId=${item.id}">${item.name}</a></li>`;
                    $('#department').append(row);
                });
            },
            error: function (error) {

            },
            complete: function () {

            }
        });

        $.ajax({
            url: "/Products/GetBigBanner",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                $('#hero-banner').html('');
                data.forEach(function (item, index) {
                    let row = `<div class="hero__item set-bg" data-setbg="${item.imagePath}" style="background-image:url(${item.imagePath});">
                                <div class="hero__text">
                                    <h2>${item.title}</h2>
                                    <p>${item.content}</p>
                                    <a href="/products/index?categoryId=${item.toCategoryId}" class="primary-btn">SHOP NOW</a>
                                </div>
                            </div>`;
                    $('#hero-banner').append(row);
                });
            },
            error: function (error) {

            },
            complete: function () {

            }
        });

        $.ajax({
            url: "/Products/GetAllBanner",
            type: "GET",
            dataType: "json",
            beforeSend: function () {

            },
            success: function (data) {
                $('#all-banner').html('');
                data.forEach(function (item, index) {
                    console.log(item.imagePath);
                    let row = `<div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="banner__pic" style="background-image:url(${item.imagePath});">
                                        <div class="banner__pic">
                                            <h2>${item.title}</h2>
                                            <p>${item.content}</p>
                                                    <a href="/products/index?categoryId=${item.toCategoryId}" class="primary-btn">SHOP NOW</a>
                                        </div>
                                    </div>
                              </div>`;
                    $('#all-banner').append(row);
                });
            },
            error: function (error) {

            },
            complete: function () {

            }
        });

        $.ajax({
            url:"/blog/GetBlogs",
            type: "GET",
            dataType: "json",
            beforeSend: function() {

            },
            success: function(data) {
                $('#get-blog').html('');
                var count = 0;
                data.forEach(function(item, index) {
                    if (count == 3) {
                        return;
                    }
                    let row = `<div class="col-lg-4 col-md-4 col-sm-6">
                                    <div class="blog__item">
                                        <div class="blog__item__pic">
                                            <img src="${item.imagePath}" alt="">
                                        </div>
                                        <div class="blog__item__text">
                                            <ul>
                                                <li><i class="fa fa-calendar-o"></i> ${item.customDate}</li>
                                                <li><i class="fa fa-comment-o"></i> ${item.comments}</li>
                                            </ul>
                                            <h5><a href="/blog/blogdetails?blogId=${item.id}">${item.title}</a></h5>
                                            <p>${item.summary}</p>
                                        </div>
                                    </div>
                                </div>`;
                    $('#get-blog').append(row);
                    count += 1;
                });
            },
            error: function(error) {

            },
            complete: function() {

            }
        })

        $.ajax({
            url: "/products/GetLatestProducts",
            type: "GET",
            dataType: "json",
            success: function (data) {
                var count = 0;
                let col = jQuery('<div>', { class: 'latest-prdouct__slider__item' });
                data.forEach(function (item, index) {
                    if (count == 2) {
                        return;
                    }
                    let row = `<a href="/products/shopdetails?productId=${item.id}" class="latest-product__item">
                                                    <div class="latest-product__item__pic">
                                                        <img src="${item.imagePath}" style="max-width:110px" alt="">
                                                    </div>
                                                    <div class="latest-product__item__text">
                                                        <h6>${item.name}</h6>
                                                        <span>$${item.price}</span>
                                                    </div>
                                                </a>`;
                    col.append(row);
                    if (index % 3 == 2) {
                        $('#latest-products').owlCarousel().trigger('add.owl.carousel', col);
                        col = jQuery('<div>', { class: 'latest-prdouct__slider__item' });
                        count++;
                    }
                });
                $('#latest-products').trigger('refresh.owl.carousel');
            }
        })

        $.ajax({
            url:"/products/GetFeaturedCategories",
            type: "GET",
            dataType: "json",
            beforeSend: function() {

            },
            success: function(data) {
                console.log(data);
                $('#get-featured-categories').append(`<li data-filter="*" class="active filter">All</li>`);
                data.forEach(function(item, index) {
                    let row = `<li class="filter" data-filter=".${item.slug}">${item.name}</li>`;
                    $('#get-featured-categories').append(row);

                    item.products.forEach(function(product,index) {
                        console.log(item.name);
                        console.log(product);
                        let r = `<div class="col-lg-3 col-md-4 col-sm-6 mix ${item.slug}">
                                    <div class="featured__item">
                                        <div class="featured__item__pic set-bg" style="background-image:url(${product.imagePath})">
                                            <ul class="featured__item__pic__hover">
                                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                                <li><a href="/products/shopdetails?productId=${product.id}"><i class="fa fa-shopping-cart"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="featured__item__text">
                                            <h6><a href="/products/shopdetails?productId=${product.id}">${product.name}</a></h6>
                                            <h5>$${product.price}</h5>
                                        </div>
                                    </div>
                                </div>`
                        $('#featured-products').append(r);
                    });
                });
            },
            error: function(error) {

            },
            complete: function() {

            }
        });

    </script>
}

